<h4 >Top Products</h4>
<br>
<br>
{{# each products}}
    <div id="products" class="row">
    {{# each this }}
        <div class = "col-sm-6 col-md-4">
          <div class="thumbnail">
            <img src="{{this.imgPath}}" alt="..." class= "img-responsive">
                <div class = "caption">
                <h3>{{this.model}}</h3>
                <p>KM Driven {{this.kms}}</p>
                    <div class = "clearfix">
                        <div class="price pull-left">{{this.price}}
                        </div>
                        <a  href="/loadProduct?_id={{this._id}}" class="btn btn-success pull-right" role="button">Book Test drive</a>
                    </div>
                 </div>
           </div>
         </div>

    {{/each}}
    </div>
{{/each}}
